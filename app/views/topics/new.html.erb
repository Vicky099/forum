<%= form_for @topic, :url => topics_path, :method => :post, html:{class: 'form-horizontal'} do |f| %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <h3>New Topic</h3>
    </div>
  </div>
  <%= render partial: 'form', locals: {f: f} %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <%= f.submit "Create Topic", class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
