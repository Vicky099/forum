Topic discussion: <%= @topic.name %>
<div>
  <%= link_to "share your opinion", new_topic_post_path(@topic.slug) %>
  <table>
    <% @posts.each_with_index do |post, index| %>
      <% sr_no = index + 1 %>
      <tr>
        <td><%= sr_no %> :- user: <%= post.user.email %> || comment: <%= post.body %></td>
      </tr>
    <% end %>
  </table>
</div>
