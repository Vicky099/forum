<div class="form-group">
  <%= f.label :name, class: 'control-label col-sm-2' %>
  <div class="col-sm-8">
    <%= f.text_field :name, class: 'form-control'%>
    <%= display_error_message(@errors, :name, 'Name') %>
  </div>
</div>
<div class="form-group">
  <%= f.label :tag_list, "Tags (separated by commas)", class: 'control-label col-sm-2'%>
  <div class="col-sm-8">
    <%= f.text_field :tag_list, class: 'form-control'%>
    <%= display_error_message(@errors, :tag_list, 'Tag name') %>
  </div>
</div>
<div class="form-group">
  <label class= 'control-label col-sm-2'>Content</label>
  <div class="col-sm-8">
    <%= f.fields_for :posts do |post| %>
      <%= post.hidden_field :user_id, value: current_user.id %>
      <%= post.text_area :body, size: '50*10', class: 'form-control'%>
      <%= display_error_message(@errors, :'posts.body', 'Content') %>
    <% end %>
  </div>
</div>
