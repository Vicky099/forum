<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <h2>Change your password</h2>
    </div>
  </div>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, "New password", class: "control-label col-sm-2" %>
    <div class="col-sm-6">
      <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control' %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm new password", class: 'control-label col-sm-2' %>
    <div class="col-sm-6">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <%= f.submit "Change my password", class: 'btn btn-default'%>
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
