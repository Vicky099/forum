<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-6">
			<h2>Forgot your password?</h2>
		</div>
	</div>
  <div class="form-group">
    <%= f.label :email, class: 'control-label col-sm-2' %>
    <div class="col-sm-6">
    	<%= f.email_field :email, autofocus: true, class: 'form-control' %>
    	<%= display_error_message(device_error_list, :email, 'Email') %>
  	</div>
  </div>

  <div class="form-group">
  	<div class="col-sm-offset-2 col-sm-8">
  		<%= f.submit "Send me reset password instructions", class: 'btn btn-default' %>
  		<%= render "devise/shared/links" %>
  	</div>
  </div>
<% end %>
