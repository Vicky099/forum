<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class: 'form-horizontal'}) do |f| %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <h2>Sign Up</h2>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "control-label col-sm-2" %>
    <div class="col-sm-6">
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      <%= display_error_message(device_error_list, :email, 'Email') %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'control-label col-sm-2' %>
    <div class="col-sm-6">
      <%= f.password_field :password, autocomplete: "off",class: 'form-control' %>
      <%= display_error_message(device_error_list, :password) %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'control-label col-sm-2' %>
    <div class="col-sm-6">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      <%= display_error_message(device_error_list, :password_confirmation, "Password") %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <%= f.submit "Sign up", class: 'btn btn-default' %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
