<%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{class: 'form-horizontal'}) do |f| %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <h2>Login</h2>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email , class: 'control-label col-sm-2' %>
    <div class="col-sm-6">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
      <%= display_error_message(device_error_list, :email, 'Email') %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'control-label col-sm-2' %>
    <div class="col-sm-6">
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      <%= display_error_message(device_error_list, :password, 'Email') %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
          <label><%= f.check_box :remember_me %> Remember me</label>
        </div>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <%= f.submit "Log in", class: 'btn btn-default'%>
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>


